<h1>Enter new to-do items below.</h1>

<form action="/todos/create_item" method="post">
  Title:
    <input type="text" name="title"><br>
  Description:
    <input type="text" name="description"><br>
  Category:
    <select name="school">

      <option value = 0>Select a category...</option>
        <% @categories.each do |category| %>
          <option value="<%= category.id %>">
            <%= category.category %>
          </option>
      <% end %>

    </select><br>

  Assigned to:
    <input type="number" name="user_id" value="<%= session["user_id"] %>"><br>
  Completed:
    <input type="checkbox" name="completed"><br>
    <input type="submit">
</form>

<a href="/todos/list">Back</a>